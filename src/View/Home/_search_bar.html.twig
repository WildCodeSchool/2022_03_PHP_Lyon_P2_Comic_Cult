<main class="d-flex flex-column justify-content-center align-items-center">
    <h1 class="website_title mb-4">B<span>d</span> C<span>ult'</span></h1>
    {% for error in errors %}
        <p class="text-warning">{{ error }}</p>
    {% endfor %}
    <form class="search_bar w-75 mb-5 ps-3 pe-2 d-flex justify-content-between" method="POST">
            <input class="search_input w-100 me-2 align-top" type="search" list="completionList" autocomplete="off" name="keywords" placeholder="Rechercher une BD..." aria-label="Search" required>
            <datalist id="completionList">
                {% for completion in completionList %}
                    <option>{{ completion.user_research }}</option>
                {% endfor %}
            </datalist>
            <button class="search_button" type="submit"><img id="snag_icon" src="/assets/images/snag_icon.png" alt=""></button>
    </form>
    <img class="rounded-3" src="/assets/images/home_picture.png" id="home_picture" alt="colored pitcture of a comic page">
    
</main>