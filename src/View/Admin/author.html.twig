{% extends 'layout.html.twig' %}
{% block stylesheet %}<link rel="stylesheet" href="/assets/css/admin_style.css">
{% endblock %}
{% block content %}
	{% include "Admin/_header.html.twig" %}
	<main>
		<a href="/"><img id="return_button" src="/assets/images/bouton-retour.png" alt=""></a>
		<h1 id="dashboard_title">Liste des Auteurs</h1>
		<div class="row justify-content-center table-responsive">
			<div class="col-8">
				<button id="add_button" type="button" class="btn btn-dark">Ajouter</button>
				<table class="table table-responsive">
					<thead>
						<tr>
							<th style="width: 8%;">id</th>
							<th style="width: 40%;">Auteur</th>
							<th style="width: 25%;">Rôle</th>
							<th colspan="2">Modif. / Suppr.</th>
						</tr>
					</thead>
					<tbody>
						{% for author in authors %}
						<tr>
							<td>
								{{ author.author_id }}
							</td>
							<td>
								{{ author.first_name ~ ' ' ~ author.last_name }} 
							</td>
							<td>
								{{ author.role }}

							</td>
							<td>
								<button id="add_button" type="button" class="btn btn-dark">éditer</button>
							</td>
							<td>
								<button id="add_button" type="button" class="btn btn-dark">Suppr.</button>
							</td>
						</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</main>
{% endblock %}
