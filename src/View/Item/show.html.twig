{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Item {{ item.title }}</h1>
    <p>{{ item.id }}. {{ item.title }}</p>
    <a href="/items/edit?id={{ item.id }}">Edit</a>
    <form action="/items/delete" method="POST">
        <input type="hidden" name="id" value="{{ item.id }}">
        <button>Delete</button>
    </form>
    <a href="/items">Back</a>
{% endblock %}
